generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String?
  name      String?
  city      String?
  state     String?
  zipcode   String?
  favorites String[] // Array of Resource IDs the user has favorited
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Category {
  MENTAL
  SOCIAL
  PHYSICAL
}

model Resource {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  description    String
  category       Category
  contact        Json
  address        Json
  operatingHours Json
  favoriteCount  Int      @default(0) // Number of users who have favorited this resource
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
